---
const image = Astro.props.image;
const text = Astro.props.text;
const ptext = Astro.props.ptext;
---

<article>
    <a href="/">
    <img src={image} alt="test">
			<h3>{text}</h3>
            <p>{ptext}</p>
			</a>
		</article>
        <style>
             a {
        text-decoration: none;
        color: white;
             display: flex;
        flex-direction: column;
        align-items: center;
    }
             article {
        background-color: #181818;
        margin: 10px;
        border-radius: 8px;
        width: 250px;
        height: 350px;
    }
    article:hover {
  background: #282828;
}
    p {
        margin: 10px;
        color: #a6a6a6;
    }

            img { 
                border-radius: 8px;
                margin: 10px;
               width: 224px;
                max-width: 100%;
    }
        </style>